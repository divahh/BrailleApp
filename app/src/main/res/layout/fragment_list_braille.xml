<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.list.ListBrailleFragment">

    <TextView
        android:id="@+id/tv_list_braille"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/tv_header_list"
        android:background="@drawable/bg_bottom_rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_words"
        android:layout_width="325dp"
        android:layout_height="165dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_braille">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:contentDescription="@string/image_words"
            android:src="@drawable/img_words"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/words"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next_page"
            android:src="@drawable/ic_arrow_right_24dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="7dp"
            tools:ignore="RtlHardcoded" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_numbers"
        android:layout_width="325dp"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_words">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:contentDescription="@string/image_words"
            android:src="@drawable/img_numbers"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numbers"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next_page"
            android:src="@drawable/ic_arrow_right_24dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="7dp"
            tools:ignore="RtlHardcoded" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_symbols"
        android:layout_width="325dp"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_numbers">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:contentDescription="@string/image_words"
            android:src="@drawable/img_symbols"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbols"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next_page"
            android:src="@drawable/ic_arrow_right_24dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="7dp"
            tools:ignore="RtlHardcoded" />
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_all_rounded_corner"
        android:text="@string/extras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_symbols" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_black_all_rounded_corner"
        android:text="Kembali"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>